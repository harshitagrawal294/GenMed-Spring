<header class="general_header">
    <div class="page_title">
        <h1> Register </h1>
    </div>
</header>

<div class="wrapper">
    <form action="" method="POST" id="user_register">

        <input type="email" placeholder="Email ID" class="login-input" name="email_id"/>
        <input type="text" placeholder="First Name" class="login-input" name="first_name"/>
        <input type="text" placeholder="Last Name" class="login-input" name="last_name"/>
        <input type="password" placeholder="Password" class="login-input" name="password"/>
        <input type="password" placeholder="Confirm Password" class="login-input" name="cnf_password"/>
        <input type="submit" value="Register" class="login-button" />

    </form>

    <form action="" method="POST" id="shop_register">

        <input type="text" placeholder="Shop Name" class="login-input" name="shop_name"/>
        <input type="email" placeholder="Shop Email ID" class="login-input" name="shop_email_id"/>

        <input type="text" placeholder="Shop License No" class="login-input" name="license"/>

        <input type="password" placeholder="Shop Pin" class="login-input" name="shop_pin"/>
        <input type="password" placeholder="Confirm Shop Pin" class="login-input" name="cnf_shop_pin"/>

        <input type="email" placeholder="User Email" class="login-input" name="user_email"/>
        <input type="password" placeholder="User Password" class="login-input" name="password"/>

        <input type="submit" value="Register" class="login-button" />

    </form>

    <form action="" method="POST" id="manufacturer_register">

        <input type="text" placeholder="Manufacturer Name" class="login-input" name="mf_name"/>
        <input type="email" placeholder=" Email ID" class="login-input" name="mf_email_id"/>

        <input type="text" placeholder="Manufacturing License" class="login-input" name="mf_license"/>
        <input type="radio" /> <!-- Do this part -->

        <input type="password" placeholder="Manufacturer Pin" class="login-input" name="shop_pin"/>
        <input type="password" placeholder="Confirm Manufacturer Pin" class="login-input" name="cnf_shop_pin"/>

        <input type="submit" value="Register" class="login-button" />

    </form>

    <p> Already a member? <a href="">Login</a></p>

