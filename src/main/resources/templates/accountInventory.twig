{% extends 'base.twig' %}

{% block header %}
{% include 'shopNav.twig' %}
{% endblock%}

{% block content %}
<header class="gen_header">
    <div class="bg-image">
        <h2 class="ft-rw"> Shop Inventory </h2>
    </div>
</header>

<div class="wrapper-table">
    <section>
        <h2 class="sec_title ft-rw">List of All Items in Shop</h2>
        <table>
            <tr class="table-head ft-rw">
                <th> Drug Name </th>
                <th> Manufacturer Name </th>
                <th> Price </th>
                <th> Exp Date </th>
                <th> Quantity </th>
            </tr>
            {% for row in items %}
            <tr>
                <td> {{ row.drugBatch.drug.name }}</td>
                <td> {{ row.drugBatch.drug.mf_name }}</td>
                <td> {{ row.price }}</td>
                <td> {{ row.drugBatch.exp_date }}</td>
                <td> {{ row.quantity }}</td>
            </tr>
            {% endfor %}
        </table>
    </section>

    <a href="/account/{{ shop_id }}/inventory/add"><span class="detail-button fc-white txt-sb"> Add Item </span></a>

</div>
{% endblock %}