{% extends 'base.twig' %}

{% block content %}
    <header>
        <div class="bg-image">
            <!-- Fix form -->
            <h3 class="ft-rw">Medicines</h3>
            <h4 class="ft-rw">Search the medicine here</h4>
            <br>
            <form action="/drugs" method="get" id="search">
                <p>
                    <input type="text" name="name" id="name_box">
                    <input type="submit" name="info" value="Find">
                    <br>
                </p>
            </form>
            <!-- Fix form -->
        </div>
    </header>

    <div class="wrapper-table">
        <section>
            <h2 class="table-title ft-rw">List of all medicines</h2>
            <table>
                <tr class="table-head ft-rw">
                    <th> Name </th>
                    <th> Manufacturer Name </th>
                    <th> Is Generic ? </th>
                    <th> Link </th>
                </tr>
                {% for row in drugs %}
                    <tr>
                        <td>{{ row.name }}</td>
                        <td> {{ row.mf_name }}</td>
                        <td> {{ row.is_generic }}</td>
                        <td><a href="/drug/{{ row.drug_id }}"><span class="detail-button fc-white txt-sb"> View Drug </span></a></td>
                    </tr>
                {% endfor %}
            </table>
        </section>
    </div>
{% endblock %}